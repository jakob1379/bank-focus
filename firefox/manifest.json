{
  "manifest_version": 3,
  "name": "Fokus for Nykredit",
  "version": "2.0",
  "description": "Hide checked transactions in Nykredit Netbank for a clearer view. Not affiliated with Nykredit A/S.",
  "browser_specific_settings": {
    "gecko": {
      "id": "fokusfornykredit@jgalabs.dk",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://netbank.nykredit.dk/*"],
  "content_scripts": [
    {
      "matches": ["https://netbank.nykredit.dk/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Skjul afstemte posteringer",
    "default_icon": {
      "16": "icons/inactive/icon16.svg",
      "48": "icons/inactive/icon48.svg",
      "128": "icons/inactive/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/inactive/icon16.svg",
    "48": "icons/inactive/icon48.svg",
    "128": "icons/inactive/icon128.svg"
  }
}
