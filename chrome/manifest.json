{
  "manifest_version": 3,
  "name": "Hide Checked Rows",
  "version": "1.0",
  "description": "Focus on what needs your attention by hiding already-reconciled transactions from your account overview",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://netbank.nykredit.dk/*"],
  "content_scripts": [{
    "matches": ["https://netbank.nykredit.dk/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Skjul afstemte posteringer",
    "default_icon": {
      "16": "icons/inactive/icon16.svg",
      "48": "icons/inactive/icon48.svg",
      "128": "icons/inactive/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/inactive/icon16.svg",
    "48": "icons/inactive/icon48.svg",
    "128": "icons/inactive/icon128.svg"
  }
}
